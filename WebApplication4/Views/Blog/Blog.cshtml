@model WebApplication4.Models.BlogPost

<h1>@Model.Title</h1>
<p>@Model.Content</p>
<p>Författare: @Model.Author</p>

<h2>Kommentarer</h2>
<ul>
    @foreach (var comment in Model.Comments)
    {
        <li>@comment.Author: @comment.Content</li>
    }
</ul>

<h3>Lägg till kommentar</h3>
<form method="post" action="@Url.Action("Create", "Comment", new { postId = Model.Id })">
    <label for="author">Ditt namn:</label>
    <input type="text" id="author" name="Author" required />
    <label for="content">Kommentar:</label>
    <textarea id="content" name="Content" required></textarea>
    <button type="submit">Skicka</button>
</form>
