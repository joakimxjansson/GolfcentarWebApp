@model WebApplication4.Models.UserProfile
<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Redigera Profil</title>
<link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
<div class="profile-container">
<label for="profileImageInput" class="profile-image-container">
<img src="@Model.ProfileImage" alt="Profilbild" class="profile-image" id="profileImagePreview" />
</label>
<input type="file" name="profileImage" id="profileImageInput" accept="image/*" style="display: none;" />
<h2>Redigera Profil</h2>
<form method="post" enctype="multipart/form-data">
<input type="text" asp-for="Name" class="input-field" placeholder="Namn" required />
<input type="email" asp-for="Email" class="input-field" placeholder="E-post" required />
<input type="text" asp-for="PhoneNumber" class="input-field" placeholder="Telefonnummer" required />
<button type="submit" class="submit-button">Spara profil</button>
</form>
</div>
<script>

        document.getElementById("profileImagePreview").addEventListener("click", function() {

            document.getElementById("profileImageInput").click();

        });

        document.getElementById("profileImageInput").addEventListener("change", function(event) {

            if (event.target.files.length > 0) {

                var src = URL.createObjectURL(event.target.files[0]);

                document.getElementById("profileImagePreview").src = src;

            }

        });
</script>
</body>
</html> 