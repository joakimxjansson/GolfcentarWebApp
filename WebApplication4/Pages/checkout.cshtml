@page
@using WebApplication4.Data
@model WebApplication4.Pages.Index1Model
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    
    
    <div id="cart-container">
        <h1>Golfcentar</h1>
        <div style="text-align: center;">
            <h5>Din varukorg</h5>
            </div>
    <table>
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Antal</th>
                <th>Pris</th>
                <th>Summa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._CartItems)
            {
                <tr>
                    <td>@item.ProdId.ProdName</td>
                    <td>@item.Quantity</td>
                    <td>@item.ProdId.ProdPrice:-</td>
                    <td>@item.TotalPrice:-</td>
                </tr>
            }
        </tbody>
    </table>

    <div id="cart-details">
    <p>Totalt pris: @Model._CartItems.Sum(item => item.TotalPrice):-</p>
    <p>Frakavigt: <b>Fri Frakt</b></p>

    <div style="text-align: center;">
        <h5>Förvalt betalsätt: Crediter laddat på konto för id: (Lägg in id på användare)</h5>

        <div style="text-align: left";>
                    <button class="buttonLogInLS" onclick="location.href='checkoutexit'">Slutför köp</button>
        </div>
    </div>
    </div>
    </div>  
</body>
</html>
