@page
@using WebApplication4.Data;
@model WebApplication4.Pages.checkoutModel

@{
    ViewData["Title"] = "Cart exit";
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
</head>

<body>

        <!-- container för produkter i varukorgen -->
    <div id="cart-container">
        <div id="header-container">
            <h1>Golfcentar</h1>
            <h5>Din varukorg</h5>
        </div>

        <div id="cart-items-container">
            <table>
                <thead>
                    <tr>
                        <th>Produkt</th>
                        <th>Antal</th>
                        <th>Pris</th>
                        <th>Summa</th>
                    </tr>
                </thead>
                <tbody>
                    <!--  Laddar in lista med product/antal och pris-->
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.Product</td>
                            <td>@item.Quantity</td>
                            <td>@item.TotalPrice = Product * Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    <!-- slut på container -->

    <!--Container för cart details-->
        <div id="cart-details">
            <!--Hämtar in artiklar i varukorgen för att beräkna summa-->
            <p>Totalt pris: @Model.CartItems.Sum(item => item.TotalPrice):-</p>
            <p>Frakavigt: <b>Fri Frakt</b></p>

            <div style="text-align: center;">
                <!-- kollar id på user som är inloggad-->
                <h5>Förvalt betalsätt: Crediter laddat på konto för id: @Model.User.FindFirst("UserId")</h5>
                <p>Ditt saldo: @Model.UserSaldo</p>

                <div style="text-align: left;">
                    <button class="buttonLS" onclick="location.href='checkoutexit'">Slutför köp</button>
                </div>
            </div>
        </div>
        </div>
    <!--Slut-->

</body>
</html>

            <!-- css-->

    <style>
        body {
            background-color: #e5e5cc;
            font-family: Arial, Helvetica, sans-serif;
            margin-bottom: 60px;
        }

    .buttonLS {
        display: block;
        margin: 20px auto;
        padding: 12px 24px;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        color: darkgray;
        border: none; 
        border-radius: 30px; 
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .buttonLS:hover {
            background-color: #55552b;
            transform: scale(1.05); 
        }


         #header-container {
         text-align:center;
         }

    

        .order-details {
            text-align: center;
        }

        #cart-container {
            text-align: center;
            border: 1px solid #ccc;
            padding: 20px;
            margin-top: 3em;
            background-color: #f9f9f9;
            border-radius: 5px;
            width: 80%;
            margin: 0 auto;
        }

        #cart-details {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }
    </style>
