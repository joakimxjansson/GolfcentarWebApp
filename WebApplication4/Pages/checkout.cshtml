@page
@using WebApplication4.Data;
@model WebApplication4.Pages.checkoutModel

@{
    ViewData["Title"] = "Cart exit";
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">

</head>

<body>


    <div id="cart-container">
        <h1>Golfcentar</h1>
        <div style="text-align: center;">
            <h5>Din varukorg</h5>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Produkt</th>
                    <th>Antal</th>
                    <th>Pris</th>
                    <th>Summa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.Product.ProdName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Product.ProdPrice kr</td>
                        <td>@(item.Product.ProdPrice * item.Quantity) kr</td>
                    </tr>
                }
            </tbody>
        </table>

        <div id="cart-details">
            <p>Totalt pris: @Model.CartItems.Sum(item => item.TotalPrice):-</p>
            <p>Frakavigt: <b>Fri Frakt</b></p>

            <div style="text-align: center;">
                <h5>Förvalt betalsätt: Crediter laddat på konto för id: (Lägg in id på användare)</h5>

                <div style="text-align: left" ;>
                    <button class="buttonLogInLS" onclick="location.href='checkoutexit'">Slutför köp</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

            <!-- css-->

    <style>
        body {
            background-color: #e5e5cc;
            font-family: Arial, Helvetica, sans-serif;
            margin-bottom: 60px;
        }

    .buttonLogInLS {
        display: block;
        margin: 20px auto;
        padding: 12px 24px;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        color: darkgray;
        border: none; 
        border-radius: 30px; 
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .buttonLogInLS:hover {
            background-color: #55552b;
            transform: scale(1.05); /* förstoring vid hovring */
        }

        .buttonLogInLS:focus {
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.6); /* Blått ljus runt knappen */
        }



        .order-details {
            text-align: center;
        }

        #cart-container {
            text-align: center;
            border: 1px solid #ccc;
            padding: 20px;
            margin-top: 20px;
            background-color: #f9f9f9;
            border-radius: 5px;
            width: 80%;
            margin: 0 auto;
        }

        #cart-details {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }
    </style>
