@page
@model WebApplication4.Pages.LoginModel
@{
}

<div class="logincontainer" style="padding:20px">
    <form method="post" class="form">
        <h3 class="loginrubrik">Logga in</h3>
        <p class="logintext">Här loggar du in dig med användarnamn och lösenord</p>
        
        <div class="form-group">
           <div class="col-1">
                <label asp-for="UserName">Användarnamn:</label>
            </div>

            <div class="col-2">
                <input type="text" class="textbox" asp-for="UserName" />
            </div>
        </div>

        <div class="form-group">

            <div class="col-1">
                <label asp-for="PassWord">Lösenord:</label>
            </div>

            <div class="col-2">
                <input type="password" class="textbox" asp-for="PassWord" />
            </div>

        </div>

        <div class="form-group">
            <div class="col-3">
                <input type="submit" class="btn btn-primary" value="Logga in" />
            </div>
        </div>
    </form>
</div>