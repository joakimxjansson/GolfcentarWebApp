@page
@model WebApplication4.Pages.Blog.BlogModel
@{
    ViewData["Title"] = "Blogg";
    Layout = "_Layout"; // Här används den gemensamma layouten
}

<div class="blog-posts">
    @foreach (var post in Model.BlogPost)
    {
        <div class="post">
            <h2>@post.Title</h2>
            <p>@post.Content</p>
            <p><strong>Författare:</strong> @post.Author</p>
            <p><strong>Publicerat:</strong> @post.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
            <a asp-page="/Blog/Details" asp-route-id="@post.BlogPostId" class="read-more">Läs mer och kommentera</a>
        </div>
    }
</div>
