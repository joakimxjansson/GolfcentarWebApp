@page
@using WebApplication4.Data
@model WebApplication4.Pages.MyProfileModel

@{
}

<!DOCTYPE html>

<html>
<head>
    <title>MyProfile</title>
</head>
<body>
    <div>
        <p> @Model.Message</p>


		<div class="container d-flex justify-content-center mt-5">

			<div class="card myprofile">

				<div class="profile-container">

					<img src="~/images/keps.jpg" class="img-fluid profile-image" width="100">

					<div class="ml-3">
						<h5 class="MyProfile-name">Tiger Woods</h5>
						<p class="MyProfile-mail">Tiger@gmail.com</p>
					</div>
				</div>


				<div class="balance-container d-flex justify-content-between align-items-center mt-3 p-2">
					<div class="dollar-div">

						<img src="~/images/money.webp"  width="70">

					</div>
					<div class="d-flex flex-column text-right mr-2">
						<span class="current-balance">Nuvarande Saldo</span>
						<span class="amount"><span class="kr">Kr: </span>1476</span>
					</div>

				</div>

				<div class="links-border mt-4">
					<span class="links">Mina ordrar / kvitton</span>
				</div>
				<div class="links-border pt-2">
					<span class="links">Redigera användaruppgifter</span>
				</div>
			
			</div>

		</div>

    </div>
</body>
</html>